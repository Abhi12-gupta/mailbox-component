	<script id="outlook_imap_configuration_template" type="text/template">
        <div class="uv-element-block">
			<label class="uv-field-label">{{ 'Username' |trans }}</label>
			
			<div class="uv-field-block">
				<% if (typeof(username) != 'undefined' && username != '') { %>
